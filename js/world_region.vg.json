{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lynnlin-git/FIT3179/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer":[
    {
     "data": {
        "url": "https://raw.githubusercontent.com/lynnlin-git/FIT3179/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "projection": {
        "type": "equirectangular"
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ededed",
        "stroke": "white"
      },
      "encoding": {
         "tooltip": [
         {"field": "properties.NAME", "type": "nominal", "title": "Country"}]    }},
   {
   "transform": [
      {
         "lookup": "properties.NAME",
         "from": {
            "data": {
               "url": "https://raw.githubusercontent.com/lynnlin-git/FIT3179/main/data/happy_lifeExpect.csv"
            },
            "key": "Country or region",
            "fields": ["Region"]
         }
      }
   ],
   "projection": {"type": "equirectangular"},
   "selection": {
    "region_highlight": {
    "type": "multi",
    "fields": ["Region"],
    "bind": "legend"
    }
 },
   "mark": {"type": "geoshape"},
   "encoding": {
      "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {
         "domain": [
            "Australia and New Zealand",
            "Central and Eastern Europe",
            "Eastern Asia",
            "Latin America and Caribbean",
            "Middle East and Northern Africa",
            "North America",
            "Southeastern Asia",
            "Southern Asia",
            "Sub-Saharan Africa",
            "Western Europe"
            ],
         "range": [
            "#941a1c",
            "#984ea3",
            "#ff7f00",
            "#787787",
            "#0000ff",
            "#a65628",
            "#af2349",
            "#cdcd12",
            "#ef3400",
            "#234234"
            ]
      }
 },
  "opacity": {
    "condition": {"selection": "region_highlight", "value": 0.6},
    "value": 0.1
 },
      "tooltip": [
         {"field": "properties.NAME", "type": "nominal", "title": "Country"},
         {"field": "Region", "type": "nominal"}
      ]
   }}
  ]
}
