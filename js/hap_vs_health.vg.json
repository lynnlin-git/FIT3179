  
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
   "width": 500,
  "height": 400,
  "title": "World Happiness Ranking",
  "data": {"url": "https://raw.githubusercontent.com/lynnlin-git/FIT3179/main/data/happy_lifeExpect.csv"},
 "transform": [
    {"filter": "datum.HealthyLifeExpectancy > 0"},
    {"filter": "datum.Score > 0"}
    ],
 "selection": {
    "region_highlight": {
    "type": "multi",
    "fields": ["Region"],
    "bind": "legend"
    }
 },
 "mark": "circle",
 "encoding": {
 "x": {
 "field": "HealthyLifeExpectancy",
 "type": "quantitative",
 "title": "Healthy Life Expectancy",
 "axis": {"tickCount": 7},
 "scale": {"type": "linear", "domain": [0.1, 1.2]}
 },
 "y": {
 "field": "Score",
 "type": "quantitative",
 "axis": {"tickCount": 6},
 "scale": {"type": "linear", "domain": [1, 8]}
 },
 "color": {
 "field": "Region",
 "type": "nominal",
 "scale": {
 "domain": [
    "Australia and New Zealand",
    "Central and Eastern Europe",
    "Eastern Asia",
    "Latin America and Caribbean",
    "Middle East and Northern Africa",
    "North America",
    "Southeastern Asia",
    "Southern Asia",
    "Sub-Saharan Africa",
    "Western Europe"
 ],
 "range": [
    "#941a1c",
    "#984ea3",
    "#ff7f00",
    "#787787",
    "#0000ff",
    "#a65628",
    "#af2349",
    "#cf7812",
    "#ef3400",
    "#234234"
 ]
 }
 },
 "opacity": {
    "condition": {"selection": "region_highlight", "value": 0.6},
    "value": 0.2
 },
 "size": {
    "field": "Population",
    "type": "quantitative",
    "scale": {
    "type": "threshold",
    "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
    "range": [10, 50, 150, 200, 300, 400]
 },
 "legend": {"format": ".1s"}
 },
  "tooltip": [
      {"field": "Country or region", "type": "nominal", "title": "Country"},
      {"field": "Region", "type": "nominal"},
      {"field": "Score", "type": "quantitative", "title": "World Happiness Score"},
      {"field": "HealthyLifeExpectancy", "type": "quantitative", "format": ","},
      {"field": "Population", "type": "quantitative", "format": ","}
  
 ]
 }
}



